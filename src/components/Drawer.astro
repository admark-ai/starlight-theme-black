---
import type { Props } from '@astrojs/starlight/props'
import userConfig from 'virtual:starlight-theme-black-config'

const { siteTitleHref, sidebar } = Astro.props
---

<div popover="auto" id="drawer">
  <button class="sheet-overlay" popovertarget="drawer" popovertargetaction="hide"></button>
  <div class="content">
    <div class="header">
      <button class="drag-icon" popovertarget="drawer" popovertargetaction="hide"><span></span></button>
    </div>
    <div class="body">
      <div class="links-nav">
        <a href={siteTitleHref}>Home</a>
        {userConfig.navLinks?.map((link) => <a href={link.slug}>{link.text}</a>)}
      </div>

      <div class="links-docs">
        {
          sidebar.map(
            (entry) =>
              entry.type !== 'link' && (
                <div class="container-sidebar-entry">
                  <h4 class="entry-title">{entry.label}</h4>

                  {entry.entries.map(
                    (link) =>
                      link.type === 'link' && (
                        <a href={link.href} {...link.attrs}>
                          {link.label}
                        </a>
                      ),
                  )}
                </div>
              ),
          )
        }
      </div>
    </div>
  </div>
</div>

<style>
  button {
    all: unset;
  }

  [popover] {
    position: fixed;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100vh;
    display: flex;
    opacity: 0;
    pointer-events: none;
    align-items: center;
    flex-direction: column;
    justify-content: flex-end;
    transition: 0.1s linear;
    z-index: 1000;
    background: transparent;
    border: none;
  }

  [popover]::backdrop {
    background: rgba(0, 0, 0, 0.8);
  }

  [popover]:popover-open {
    opacity: 1;
    pointer-events: auto;
  }

  [popover]:popover-open .content {
    transform: translateY(0%);
  }

  .sheet-overlay {
    position: fixed;
    top: 0;
    left: 0;
    z-index: -1;
    width: 100vw;
    height: 100vh;
    opacity: 0.1;
    background-color: transparent;
  }

  .content {
    width: 100%;
    position: relative;
    background: hsl(var(--background));
    max-height: 100vh;
    height: 50vh;
    max-width: 1150px;
    transform: translateY(100%);
    border-radius: 12px 12px 0 0;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.03);
    transition: 0.3s ease;
  }

  .header {
    display: flex;
    justify-content: center;
  }

  .header .drag-icon span {
    height: 0.1rem;
    width: 100px;
    display: block;
    background-color: hsl(var(--muted));
    border-radius: 9999px;
    margin-top: 1rem;
  }

  .body {
    height: 100%;
    overflow-y: auto;
    padding: 1.5rem;
  }

  .body::-webkit-scrollbar {
    width: 0;
  }

  .links-nav {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .links-nav a {
    font-size: 1rem;
    line-height: 1.5rem;
    color: inherit;
    text-decoration: inherit;
  }

  .links-docs {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .container-sidebar-entry {
    padding-top: 1.5rem;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .entry-title {
    font-weight: 500;
  }

  .container-sidebar-entry a {
    font-size: 1rem;
    line-height: 1.5rem;
    color: hsl(var(--muted-foreground));
    text-decoration: inherit;
  }
</style>
